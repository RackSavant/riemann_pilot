# Tea Party MVP Environment Variables

# ========================================
# REQUIRED: LLM API Keys
# ========================================

# OpenAI API Key (for text generation with GPT-4)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Google AI API Key (for Veo 3.1 video generation)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=...


# ========================================
# OPTIONAL: Server Configuration
# ========================================

# Backend server settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Log level
LOG_LEVEL=INFO


# ========================================
# OPTIONAL: Video Generation Settings
# ========================================

# Veo video settings
VEO_DURATION_SECONDS=8
VEO_RESOLUTION=720p
VEO_ASPECT_RATIO=16:9

# Enable/disable video generation by default
DEFAULT_GENERATE_VIDEOS=false

# Video generation timeout (seconds)
VIDEO_TIMEOUT=360
